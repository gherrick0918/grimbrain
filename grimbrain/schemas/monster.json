{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Monster",
  "type": "object",
  "required": [
    "name",
    "source",
    "ac",
    "hp",
    "speed",
    "str",
    "dex",
    "con",
    "int",
    "wis",
    "cha",
    "traits",
    "actions",
    "actions_struct",
    "reactions",
    "provenance"
  ],
  "properties": {
    "name": {"type": "string"},
    "source": {"type": "string"},
    "ac": {"type": "string"},
    "hp": {"type": "string"},
    "speed": {"type": "string"},
    "str": {"type": "integer"},
    "dex": {"type": "integer"},
    "con": {"type": "integer"},
    "int": {"type": "integer"},
    "wis": {"type": "integer"},
    "cha": {"type": "integer"},
    "traits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "text"],
        "properties": {
          "name": {"type": "string"},
          "text": {"type": "string"}
        }
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "text"],
        "properties": {
          "name": {"type": "string"},
          "text": {"type": "string"}
        }
      }
    },
    "actions_struct": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "attack_bonus",
          "type",
          "reach_or_range",
          "target",
          "hit_text",
          "damage_dice",
          "damage_type"
        ],
        "properties": {
          "name": {"type": "string"},
          "attack_bonus": {"type": "integer"},
          "type": {"type": "string"},
          "reach_or_range": {"type": "string"},
          "target": {"type": "string"},
          "hit_text": {"type": "string"},
          "damage_dice": {"type": "string"},
          "damage_type": {"type": "string"}
        }
      }
    },
    "reactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "text"],
        "properties": {
          "name": {"type": "string"},
          "text": {"type": "string"}
        }
      }
    },
    "provenance": {"type": "array"}
  }
}

